<% provide(:title, 'Usuarios') %>
<h1>Todos los Usuarios</h1>

<div class="colsm-3 offset-sm-1" id="users_container">
  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= imagen_gravatar user, size: 50 %>
        <%= link_to user.name, user %>
      </li>
    <% end %>
  </ul>

  <%= paginate(@users) %>  
</div>
